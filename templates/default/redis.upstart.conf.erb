description "redis server"

start on startup
stop  on shutdown

env USER=<%= @redis[:user] %>

script

  exec start-stop-daemon                  \
    --start                               \
    --chuid <%= @redis[:user] %>          \
    --make-pidfile                        \
    --pidfile /var/run/redis.pid          \
    --exec /usr/bin/redis-server          \
    -- <%= @redis[:confdir] %>/redis.conf \
    >> /var/log/redis.log 2>&1

end script

pre-start script
  echo "[`date`] (sys) Starting..." >> /var/log/redis.log
end script

pre-start script
  echo "[`date`] (sys) Stopping..." >> /var/log/redis.log
end script
